@model EmpleadosEBS.Models.PedidoIndexData.PedidoIndexData

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCocinero.cshtml";
}
<div class="jumbotron">
    <table class="table">
        <thead>
            <tr>
                <th>
                    FechaHora
                </th>
                <th>
                    EstadoPedido
                </th>
                <th>
                    Detalle de Pedido
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Pedidos)
            {
                if (item.EstadoPedido.Descripcion == "Solicitado")
                {
                    string selectedRow = "";
                    if (item.ID == (int?)ViewData["PlatoID"])
                    {
                        selectedRow = "success";
                    }
                <tr class="@selectedRow">
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaHora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoPedido.Descripcion)
                    </td>

                    <td>
                        @{
                            foreach (var det in item.DetPedidos)
                            {

                                @det.Articulo.Denominacion @:
                                @det.Plato.Denominacion
                                 <br />
                            }
                        }

                    </td>
                                       
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
    <p>
        <a class="btn btn-outline-primary" asp-action="Create">Crear Pedido</a>
    </p>
</div>