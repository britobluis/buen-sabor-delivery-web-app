@model EmpleadosEBS.Models.Articulo

@{
    ViewData["Title"] = "Descartar";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="jumbotron">
    <h3>Esta seguro que desea descartar este articulo?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Denominacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Denominacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EsInsumo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EsInsumo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnidadMedida)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnidadMedida)
            </dd>

        </dl>

        <form asp-action="Descartar">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Descartar" class="btn btn-danger" /> 
            <a class="btn btn-info" asp-action="Index">Volver a la lista de articulos</a>
        </form>
    </div>
</div>