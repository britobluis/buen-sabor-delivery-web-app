@model IEnumerable<EmpleadosEBS.Models.Plato>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="jumbotron">
    <div class="alert alert-dismissible alert-warning">
        <h3>Platos Pendientes</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Denominacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (!item.Aprobado)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Denominacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                <a class="btn btn-outline-info" asp-action="Revisar" asp-route-id="@item.ID">Revisar</a>
                                <a class="btn btn-outline-danger" asp-action="Descartar" asp-route-id="@item.ID">Descartar</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="alert alert-dismissible alert-light">
        <h3>Lista de Platos</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Denominacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrecioVenta)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Aprobado)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Denominacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PrecioVenta)
                            </td>
                            <td>
                                <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.ID">Editar</a> 
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ID">Eliminar</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <a class="btn btn-outline-primary" asp-action="Create">Ingresar Plato</a>
</div>
