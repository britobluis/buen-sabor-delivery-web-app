@model EmpleadosEBS.Models.Plato

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutCocinero.cshtml";
}

<div class="jumbotron">
    <h3>Editar Plato</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditPlato">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="Denominacion" class="control-label"></label>
                    <input asp-for="Denominacion" class="form-control" />
                    <span asp-validation-for="Denominacion" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Imagen" />
                <input type="hidden" asp-for="PrecioVenta" />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <table>
                            <tr>
                                @{
                                    int cnt = 0;
                                    List<EmpleadosEBS.Models.PlatoIndexData.ArticuloAsignado> articulos = ViewBag.Articulos;

                                    foreach (var articulo in articulos)
                                    {
                                        if (cnt++ % 3 == 0)
                                        {
                                        @:</tr><tr>
                                        }
                                        @:<td>
                                            <input type="checkbox"
                                                   name="articulosSeleccionados"
                                                   value="@articulo.ID"
                                                   @(Html.Raw(articulo.Asignado ? "checked=\"checked\"" : "")) />
                                            @articulo.ID @:  @articulo.Denominacion
                                        @:</td>
                                    }
                                @:</tr>
                                }
                            </table>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="btn btn-outline-info" asp-action="IndexPlato">Volver a la lista</a>
        </div>
    </div>
