@model EmpleadosEBS.ViewModels.ShoppingCartViewModel
@using EmpleadosEBS.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@inject SignInManager<User> SignInManager


@if (Model.ShoppingCart.ShoppingCartItems.Count > 0 && SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-controller="ShoppingCart" asp-action="Index">
            <i class="fa fa-shopping-cart"></i>
            <span id="cart-status" style="display:inline-block;">
                @Model.ShoppingCart.ShoppingCartItems.Count
            </span>
        </a>
    </li>
}
