@model EmpleadosEBS.Models.Articulo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutCajero.cshtml";
}
<div class="jumbotron">
    <h3>Bebida</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateBebida">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Denominacion" class="control-label"></label>
                    <input asp-for="Denominacion" class="form-control" />
                    <span asp-validation-for="Denominacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecioCompra" class="control-label"></label>
                    <input asp-for="PrecioCompra" class="form-control" />
                    <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                </div>               
                <div class="form-group">
                    <label asp-for="Stock" class="control-label"></label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnidadMedida" class="control-label"></label>
                    <input asp-for="UnidadMedida" class="form-control" />
                    <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar a revision" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-outline-success" asp-action="IndexBebida">Volver a la lista</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>