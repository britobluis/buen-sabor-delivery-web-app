@model EmpleadosEBS.Models.Pedido

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutCajero.cshtml";
}
<div class="jumbotron">
    <h4>Pedido</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditPedido">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />

                <div class="form-group">
                    <label asp-for="NumeroPedido" class="control-label"></label>
                    <input asp-for="NumeroPedido" class="form-control" />
                    <span asp-validation-for="NumeroPedido" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="EstadoPedidoID"/>
                <input type="hidden" asp-for="UserId"/>
               
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="PorDelivery" /> @Html.DisplayNameFor(model => model.PorDelivery)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="FechaHora" class="control-label"></label>
                    <input asp-for="FechaHora" class="form-control" />
                    <span asp-validation-for="FechaHora" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecioVenta" class="control-label"></label>
                    <input asp-for="PrecioVenta" class="form-control" />
                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Aceptar Pedido" class="btn btn-outline-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-outline-info" asp-action="IndexPedido">Volver a la lista</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>