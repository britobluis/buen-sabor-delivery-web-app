@model EmpleadosEBS.Models.Articulo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="jumbotron">
    <h3>Esta Seguro que desea eliminar este articulo de la base de datos?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Denominacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Denominacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecioCompra)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecioCompra)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecioVenta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecioVenta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EsInsumo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EsInsumo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnidadMedida)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnidadMedida)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Aprobado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Aprobado)
            </dd>
        </dl>

        <form asp-action="DeleteArticulo">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
            <a class="btn btn-outline-info" asp-action="IndexArticulo">Volver a la lista</a>
        </form>
    </div>
</div>